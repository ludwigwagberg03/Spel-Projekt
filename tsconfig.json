{
  "compilerOptions": {
    /* =========================
       OUTPUT & MODULE SETTINGS
       ========================= */

    "target": "ES6", // Compile to modern JavaScript (ES6)
    "module": "ESNext", // Use modern ES module system (import/export)
    "rootDir": "./src", // Source code folder
    "outDir": "./build", // Compiled JavaScript output folder

    /* =========================
       STRICT TYPE CHECKING
       ========================= */

    "strict": true, // Enable all strict type-checking options
    "noImplicitAny": true, // Error if a type is implicitly 'any'
    "strictNullChecks": true, // Prevent null/undefined bugs
    "strictPropertyInitialization": true, // Ensure class properties are initialized
    "noUnusedLocals": true, // Error if variables are declared but never used
    "noUnusedParameters": true, // Error if function parameters are unused
    "noImplicitReturns": true, // Error if not all code paths return a value
    "noFallthroughCasesInSwitch": true, // Prevent switch fallthrough bugs

    /* =========================
       MODULE RESOLUTION
       ========================= */

    "baseUrl": "./src", // Allows absolute imports like "core/screens/IScreen"
    "esModuleInterop": true, // Improves compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true // Prevents case-sensitive file issues
  },

  "include": ["src"] // Only compile files inside src
}
